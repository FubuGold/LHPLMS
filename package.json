{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "format": "prettier --write \"**/*.js\"",
    "start": "babel-node index.js",
    "start-api-gateway:dev": "cd ./apps/api-gateway && nodemon",
    "start-auth:dev": "cd ./apps/auth && nodemon",
    "start-user:dev": "cd ./apps/user && nodemon",
    "start:dev": "concurrently \"npm run start-api-gateway:dev\" \"npm run start-user:dev\" \"npm run start-auth:dev\"",
    "test": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./apps/backend/test/jest-e2e.json",
    "prepare": "husky install"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/event-emitter": "^3.0.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/microservices": "^11.0.10",
    "@nestjs/platform-express": "^11.0.1",
    "@prisma/client": "^6.4.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.5",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "nestjs-spelunker": "^1.3.2",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@babel/core": "7.26.0",
    "@babel/node": "7.26.0",
    "@babel/plugin-proposal-decorators": "7.25.9",
    "@babel/plugin-transform-runtime": "7.25.9",
    "@babel/preset-env": "7.26.9",
    "@babel/register": "7.25.9",
    "@babel/runtime": "7.26.0",
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@nestjs/testing": "^11.0.1",
    "babel-plugin-module-resolver": "^5.0.2",
    "concurrently": "^9.1.2",
    "husky": "^8.0.0",
    "jest": "29.7.0",
    "nodemon": "3.1.9",
    "prettier": "3.4.2",
    "prisma": "^6.4.1",
    "supertest": "7.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "rootDir": ".",
    "testRegex": ".spec.js$",
    "coverageDirectory": "./coverage",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/contracts(|/.*)$": "<rootDir>/libs/contracts/src/$1"
    }
  }
}